<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ session.user.avatar }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ session.user.name }}</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> 在线</a>
                </div>
            </div>
            <li class="header">菜单</li>
            <!-- Optionally, you can add icons to the links -->
            {% for sideMenu in sideMenus %}
                {% if sideMenu.sub %}
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-link"></i>
                            <span>
                                {{ sideMenu.desc }}
                            </span>
                            <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            {% for sideSub in sideMenu.sub %}
                                <li>
                                    <a href="{{ sideSub.uri }}">
                                        <i class="fa fa-link"></i>
                                        <span>{{ sideSub.desc }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ sideMenu.uri }}">
                            <i class="fa fa-link"></i> <span>{{ sideMenu.desc }}</span>
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
            {#<li class="active">#}
                {#<a href="#"><i class="fa fa-link"></i> <span>Link</span></a>#}
            {#</li>#}

        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>